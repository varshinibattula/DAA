#include <stdio.h>
#include <math.h>

int main() {
    int a, r, n;
    int sum = 0;

    printf("Enter first term (a), common ratio(r), no of terms(n): ");
    scanf("%d %d %d", &a, &r, &n);

    if (r == 1) {
        sum = a * n;  
    } else {
        sum = (int)(a * (pow(r, n) - 1) / (r - 1));
    }

    printf("Sum = %d\n", sum);
    return 0;
}
