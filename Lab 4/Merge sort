#include <stdio.h>

int main() {
    int a[100], temp[100], n;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements: ", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    int size = 1;
    while (size < n) {
        int left = 0;

        while (left < n) {
            int mid = left + size - 1;
            int right = left + 2 * size - 1;

            if (mid >= n) {
                break;
            }

            if (right >= n) {
                right = n - 1;
            }
 
int i = left, j = mid + 1, k = left;
            while (i <= mid && j <= right) {
                if (a[i] < a[j]) {
                    temp[k++] = a[i++];
                } else {
                    temp[k++] = a[j++];
                }
            }

            while (i <= mid) {
                temp[k++] = a[i++];
            }

            while (j <= right) {
                temp[k++] = a[j++];
            }

            for (i = left; i <= right; i++) {
                a[i] = temp[i];
            }

            left = right + 1;
        }
        size *= 2;
    }

    printf("Sorted array:\n");
    for (int i = 0; i < n; i++) {
        printf("%d ", a[i]);
    }
    return 0;

}
